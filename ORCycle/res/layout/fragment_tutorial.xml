<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.pdx.cecs.orcycle.TutorialFragment" >

	<ImageView
	    android:id="@+id/iv_tutorial"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginTop="1dp"
	    android:adjustViewBounds="true"
	    android:background="@color/psu_tan"
	    android:contentDescription="@string/dsaNoteImageContentDescription"
	    android:maxHeight="300dp"
	    android:scaleType="fitCenter" />

		<Button
		    android:id="@+id/btn_tutorial_previous"
		    style="?android:attr/buttonBarButtonStyle"
		    android:layout_width="45dp"
		    android:layout_height="40dp"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:background="@color/psu_green"
		    android:text="@string/turorial_btn_previous"
		    android:textColor="@color/user_button_text"
		    android:textStyle="bold" />

		<Button
		    android:id="@+id/btn_tutorial_next"
		    style="?android:attr/buttonBarButtonStyle"
		    android:layout_width="45dp"
		    android:layout_height="40dp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:background="@color/psu_green"
		    android:text="@string/turorial_btn_next"
		    android:textColor="@color/user_button_text"
		    android:textStyle="bold" />

		<Button
		    android:id="@+id/btn_tutorial_done"
		    style="?android:attr/buttonBarButtonStyle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginBottom="15dp"
		    android:background="@color/user_button_background"
		    android:paddingLeft="12dp"
		    android:paddingRight="12dp"
		    android:text="@string/turorial_btn_done_main_input"
		    android:textColor="@color/user_button_text"
		    android:textStyle="bold" />
			
	</RelativeLayout>
